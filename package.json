{
  "name": "conduit-node",
  "version": "1.0.0",
  "description": "conduit on node",
  "main": "index.js",
  "scripts": {
    "mongo:start": "docker run --name realworld-mongo -p 27017:27017 mongo & sleep 5",
    "start": "node ./index.js",
    "dev": "nodemon ./index.js",
    "test": "newman run ./tests/api-tests.postman.json -e ./tests/env-api-tests.postman.json",
    "stop": "lsof -ti :3000 | xargs kill",
    "mongo:stop": "docker stop realworld-mongo && docker rm realworld-mongo",
    "deploy": "now -e mongo_usr=@mongo_usr -e mongo_pwd=@mongo_pwd -e mongo_uri=@mongo_uri -e secret=@secret",
    "prod": "now --prod -e mongo_usr=@mongo_usr -e mongo_pwd=@mongo_pwd -e mongo_uri=@mongo_uri -e secret=@secret",
    "nowdev": "now dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gothinkster/productionready-node-api.git"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.15.0",
    "cors": "2.7.1",
    "ejs": "^3.0.1",
    "errorhandler": "1.4.3",
    "express": "4.13.4",
    "express-jwt": "3.3.0",
    "express-session": "1.13.0",
    "http-errors": "^1.7.3",
    "http-status": "^1.4.2",
    "jsonwebtoken": "7.1.9",
    "method-override": "2.3.5",
    "methods": "1.1.2",
    "mongodb-client-encryption": "^1.0.1",
    "mongoose": "5.9.3",
    "mongoose-unique-validator": "2.0.3",
    "morgan": "1.7.0",
    "nodemailer": "^6.4.5",
    "passport": "0.3.2",
    "passport-local": "1.0.0",
    "pretty-error": "^2.1.1",
    "request": "2.69.0",
    "slug": "0.9.1",
    "slugify": "^1.4.0",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "newman": "^3.8.2",
    "nodemon": "^1.11.0"
  }
}
