{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "build": {
    "env": {
      "mongo_uri": "@mongo_uri",
      "mongo_usr": "@mongo_usr",
      "mongo_pwd": "@mongo_pwd",
      "node_env": "PROD",
      "port": "4000",
      "secret": "@secret"
    }
  }
}